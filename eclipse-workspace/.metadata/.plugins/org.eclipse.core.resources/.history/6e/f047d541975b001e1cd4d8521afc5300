package cafe_v2;

public class BeanCafe {
	
	// 필
	int money;
	int amePrice;
	int lattePrice;
	String name;
	
	
	// 생
	public BeanCafe() {
		amePrice = 3000;
		lattePrice = 3500;
		name = "콩 다방";
	}
	
	
	// 메
	
	void profit(String price) {
		if (price == "ame") {
			money += amePrice;
		} else {
			money += lattePrice;
		}
		System.out.println(name + "의 수익은 " + money + "원 입니다.");
	}
	
//	void ame() {
//		money += amePrice;
//		System.out.println(name + "의 수익은 " + money + "원 입니다.");
//	}
//	
//	void latte() {
//		money += lattePrice;
//		System.out.println(name + "의 수익은 " + money + "원 입니다.");
//	}
	
	
}





